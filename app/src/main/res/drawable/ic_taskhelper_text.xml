<!-- Vector 108×108; dibujamos dentro de la zona segura 72×72 desplazando 18dp -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Grupo trasladado a la zona segura -->
    <group android:translateX="18" android:translateY="18">

        <!-- Letra 'T' (top bar + columna) -->
        <!-- Barra superior -->
        <path
            android:pathData="M4,6 h28 v10 h-28 z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:startX="4" android:startY="6"
                    android:endX="32" android:endY="16"
                    android:type="linear">
                    <item android:offset="0.0" android:color="#FF8B5CF6"/> <!-- violeta -->
                    <item android:offset="0.5" android:color="#FF22D3EE"/> <!-- cian -->
                    <item android:offset="1.0" android:color="#FF10B981"/> <!-- verde -->
                </gradient>
            </aapt:attr>
        </path>

        <!-- Columna central -->
        <path
            android:pathData="M13,16 h10 v34 h-10 z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:startX="13" android:startY="16"
                    android:endX="23" android:endY="50"
                    android:type="linear">
                    <item android:offset="0.0" android:color="#FF8B5CF6"/>
                    <item android:offset="0.5" android:color="#FF22D3EE"/>
                    <item android:offset="1.0" android:color="#FF10B981"/>
                </gradient>
            </aapt:attr>
        </path>

        <!-- Letra 'H' (dos barras + travesaño) -->
        <!-- Barra izquierda -->
        <path
            android:pathData="M40,6 h10 v44 h-10 z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:startX="40" android:startY="6"
                    android:endX="50" android:endY="50"
                    android:type="linear">
                    <item android:offset="0.0" android:color="#FF8B5CF6"/>
                    <item android:offset="0.5" android:color="#FF22D3EE"/>
                    <item android:offset="1.0" android:color="#FF10B981"/>
                </gradient>
            </aapt:attr>
        </path>

        <!-- Barra derecha -->
        <path
            android:pathData="M62,6 h10 v44 h-10 z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:startX="62" android:startY="6"
                    android:endX="72" android:endY="50"
                    android:type="linear">
                    <item android:offset="0.0" android:color="#FF8B5CF6"/>
                    <item android:offset="0.5" android:color="#FF22D3EE"/>
                    <item android:offset="1.0" android:color="#FF10B981"/>
                </gradient>
            </aapt:attr>
        </path>

        <!-- Travesaño -->
        <path
            android:pathData="M40,25 h32 v10 h-32 z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:startX="40" android:startY="25"
                    android:endX="72" android:endY="35"
                    android:type="linear">
                    <item android:offset="0.0" android:color="#FF8B5CF6"/>
                    <item android:offset="0.5" android:color="#FF22D3EE"/>
                    <item android:offset="1.0" android:color="#FF10B981"/>
                </gradient>
            </aapt:attr>
        </path>
    </group>
</vector>